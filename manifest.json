{
    "manifest_version": 3,
    "name": "Disable YouTube Shorts",
    "version": "1.3.0",
    "description": "Hides YouTube Shorts and ads from the site.",
    "permissions": [
        "scripting",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}